{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": ["standard", "eslint:recommended", "plugin:import/errors", "plugin:import/warnings", "prettier"],
  "plugins": ["prettier"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "prettier/prettier": ["error"],
    "constructor-super": "error",
    "quotes": "off",
    "no-alert": "error",
    "no-console": "off",
    "no-tabs": "off",
    "import/no-unresolved": [2, { "caseSensitive": false }],
    "no-debugger": "error",
    "no-dupe-args": "error",
    "no-dupe-keys": "error",
    "no-duplicate-case": "error",
    "no-lone-blocks": 0,
    "no-var": "error",
    "no-unused-vars": 0,
    "no-underscore-dangle": 0,
    "no-unreachable": "error",
    "no-trailing-spaces": 0,
    "prefer-const": "warn",
    "semi": ["error", "always"],
    "sort-imports": 0,
    "eol-last": 0
  },
  "settings": {
    "import/resolver": {
      "babel-module": {}
    }
  }
}
